all: Server_main Client_main

Server_main:Server.o Server_main.o 
	g++ -pthread Server.o Server_main.o -o Server_main -std=c++11
Server.o:Server.h Server.cpp
	g++ -pthread -c Server.cpp -std=c++11
Server_main.o:Server.h Server.cpp Server_main.cpp
	g++ -pthread -c Server_main.cpp -std=c++11	

Client_main:Client.o Client_main.o
	g++ -pthread Client.o Client_main.o -o Client_main -std=c++11
Client.o:Client.h Client.cpp
	g++ -pthread -c Client.cpp -std=c++11

Client_main.o:Client.h Client.cpp Client_main.cpp
	g++ -pthread -c Client_main.cpp -std=c++11	

clean:
	rm -f *.o Server_main Client_main 
